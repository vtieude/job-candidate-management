{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",
  "entryFile": "main",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "skipAutoHttpCode": true,
          "dtoFileNameSuffix": [".dto.ts"] 
        }
      }
    ]
  }
}
